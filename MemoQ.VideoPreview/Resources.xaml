    <!-- Styles -->
    <Style x:Key="TextButton" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="#CFCFCF"/>
        <Setter Property="Foreground" Value="#333333"/>
    </Style>

    <Style x:Key="SmallImageButton" TargetType="{x:Type Button}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="11, 0"/>
    </Style>
    <Style x:Key="SmallImageToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Margin" Value="11, 0"/>
    </Style>
    <Style x:Key="BigImageToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="Margin" Value="14, 0"/>
    </Style>

    <Style x:Key="ButtonVolume" TargetType="ToggleButton" BasedOn="{StaticResource SmallImageToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <DynamicResource ResourceKey="ImageMute" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="ToolTip" Value="Unmute"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Mute"/>
        <Setter Property="Content">
            <Setter.Value>
                <DynamicResource ResourceKey="ImageVolume" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonSelection" TargetType="ToggleButton" BasedOn="{StaticResource SmallImageToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                            <Setter Property="ToolTip" Value="Playing entire video"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Playing current segment"/>
        <Setter Property="Content">
            <Setter.Value>
                <DynamicResource ResourceKey="ImageSelection" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonPlay" TargetType="ToggleButton" BasedOn="{StaticResource BigImageToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <DynamicResource ResourceKey="ImagePause" />
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Margin" Value="12, 0, 16, 0"/>
                            <Setter Property="ToolTip" Value="Pause"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.2"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Play"/>
        <Setter Property="Content">
            <Setter.Value>
                <DynamicResource ResourceKey="ImagePlay" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonLoop" TargetType="ToggleButton" BasedOn="{StaticResource SmallImageToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                            <Setter Property="ToolTip" Value="No looping"/>
                        </Trigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" Value="True"/>
                                <Condition Binding="{Binding VideoViewModel.LoopNumber}" Value="0"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="ToolTip" Value="Looping forever" />
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip">
            <Setter.Value>
                <TextBlock Text="{Binding VideoViewModel.LoopNumber, StringFormat={}Looping {0} time(s)}"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Content">
            <Setter.Value>
                <DynamicResource ResourceKey="ImageLoop" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonFullScreen" TargetType="ToggleButton" BasedOn="{StaticResource SmallImageToggleButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Opacity" Value="0.8"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ToolTip" Value="Full screen"/>
        <Setter Property="Content">
            <Setter.Value>
                <DynamicResource ResourceKey="ImageFullScreen" />
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonOpen" TargetType="Button" BasedOn="{StaticResource SmallImageButton}">
